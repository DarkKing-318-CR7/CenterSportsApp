<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- nền xanh nhạt -->
    <solid android:color="#E0F7FA" />

    <!-- bo góc -->
    <corners android:radius="12dp" />

    <!-- viền -->
    <stroke
        android:width="1dp"
        android:color="#26A69A" />

    <!-- padding trong -->

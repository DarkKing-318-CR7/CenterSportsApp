<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="24dp"
    android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="CenterBooking – Đăng nhập"
        android:textStyle="bold" android:textSize="20sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etUser" android:hint="Tài khoản"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etPass" android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnLogin" android:text="Đăng nhập"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvHint"
        android:text="(Demo ADMIN: admin / admin123)"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvHint2"
        android:text="(Demo PLAYER: player / player123)"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>

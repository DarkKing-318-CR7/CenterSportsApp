<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="125dp"
        android:padding="12dp">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person"
            android:contentDescription="@string/coach_avatar"/>

        <!-- Thông tin -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary"
                android:text="@string/coach_name_placeholder"/>

            <TextView
                android:id="@+id/tvSport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/coach_sport_placeholder"
                android:textColor="?android:attr/textColorSecondary"/>

            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/coach_level_placeholder"
                android:textColor="?android:attr/textColorSecondary"/>

            <TextView
                android:id="@+id/tvRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/coach_rate_placeholder"/>

            <TextView
                android:id="@+id/tvBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="@string/coach_bio_placeholder"/>
        </LinearLayout>

        <!-- Cột 3 nút liên lạc (tăng kích thước để không bị che) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnCall"
                style="?attr/borderlessButtonStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                app:srcCompat="@drawable/ic_call"
                android:contentDescription="@string/call"/>

            <ImageButton
                android:id="@+id/btnSms"
                style="?attr/borderlessButtonStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:src="@drawable/ic_sms"
                android:contentDescription="@string/sms"/>

            <ImageButton
                android:id="@+id/btnEmail"
                style="?attr/borderlessButtonStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:src="@drawable/ic_email"
                android:contentDescription="@string/email"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

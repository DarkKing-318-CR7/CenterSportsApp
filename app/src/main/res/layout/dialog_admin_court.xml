<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <!-- Xem trước ảnh & bấm để chọn ảnh -->
        <ImageView
            android:id="@+id/ivPreview"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_court"
            android:contentDescription="@string/desc_court_image" />

        <TextView
            android:id="@+id/tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chạm vào ảnh để chọn ảnh mới"
            android:textSize="12sp"
            android:textColor="#666"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Tên sân" android:inputType="textCapWords" />

        <EditText
            android:id="@+id/etSport"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Môn (football/tennis/badminton…)" />

        <EditText
            android:id="@+id/etSurface"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Mặt sân (grass/turf/hard/wooden)" />

        <!-- Dùng Switch đúng như code -->
        <Switch
            android:id="@+id/swIndoor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Sân trong nhà" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Giá / giờ"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Mô tả (tùy chọn)"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/etRating"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Rating (0–5, tùy chọn)"
            android:inputType="numberDecimal" />
    </LinearLayout>
</ScrollView>

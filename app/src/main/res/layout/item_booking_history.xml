<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="12dp"
    android:background="@drawable/bg_card"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <TextView android:id="@+id/tvTitle" android:text="Sân A"
        android:textStyle="bold" android:textSize="16sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvTime" android:text="2025-08-12 • 09:00-10:00"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvPrice" android:text="120.000đ"
        android:textStyle="bold"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>

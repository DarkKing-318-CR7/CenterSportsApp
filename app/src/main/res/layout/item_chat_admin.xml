<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:gravity="start" android:padding="4dp">
    <LinearLayout
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:background="@drawable/bg_bubble_admin"
        android:padding="8dp" android:orientation="vertical">
        <TextView android:id="@+id/tvMsg" android:textColor="@android:color/black"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tvTime" android:textSize="10sp" android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>

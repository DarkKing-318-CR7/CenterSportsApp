<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="16dp">

        <TextView
            android:id="@+id/tvTotalRevenue"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Tổng doanh thu: 0" android:textSize="18sp" android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvTodayRevenue"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Hôm nay: 0" android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvApprovedOrders"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Đơn đã duyệt: 0" android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvPendingOrders"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Đơn chờ duyệt: 0"/>

        <TextView
            android:id="@+id/tvTopProductsLabel"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Top sản phẩm:" android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/containerTopProducts"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>

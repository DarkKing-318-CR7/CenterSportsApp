<!-- res/layout/fragment_account.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp" android:paddingBottom="88dp"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:orientation="horizontal" android:gravity="center_vertical"
            android:layout_width="match_parent" android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="64dp" android:layout_height="64dp"
                android:src="@drawable/ic_person" android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/tvUsername"
                    android:textStyle="bold" android:textSize="18sp"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvVip"
                    android:text="Thành viên thường"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Thông tin (mặc định KHÔNG cho sửa) -->
        <TextView android:text="Họ tên" android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Nhập họ tên" android:enabled="false"/>

        <TextView android:text="Số điện thoại" android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:inputType="phone" android:hint="Nhập số điện thoại"
            android:enabled="false"/>

        <TextView android:text="Email" android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:inputType="textEmailAddress" android:hint="Nhập email"
            android:enabled="false"/>

        <!-- Địa chỉ (mới) -->
        <TextView android:text="Địa chỉ" android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Số nhà, đường, phường/xã, quận/huyện, tỉnh/thành"
            android:maxLines="3" android:enabled="false"/>

        <!-- Ngày sinh (mới) -->
        <TextView android:text="Ngày sinh" android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etDob"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="yyyy-MM-dd"
            android:focusable="false" android:clickable="true"
            android:enabled="false"/>

        <TextView
            android:text="Ngày tạo tài khoản" android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvCreatedAt"
            android:textColor="#666"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <!-- Hành động: Sửa / Lưu / Hủy -->
        <Button
            android:id="@+id/btnEdit"
            android:text="Sửa thông tin"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSave"
            android:text="Lưu thay đổi"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnCancel"
            android:text="Hủy"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:visibility="gone"/>

        <!-- Giữ hai nút dưới như cũ -->
        <Button
            android:id="@+id/btnChangePass"
            android:text="Đổi mật khẩu"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnLogout"
            android:text="Đăng xuất"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp" android:paddingBottom="88dp"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:orientation="horizontal" android:gravity="center_vertical"
            android:layout_width="match_parent" android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="64dp" android:layout_height="64dp"
                android:src="@drawable/ic_person" android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/tvUsername"
                    android:textStyle="bold" android:textSize="18sp"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvVip"
                    android:text="Thành viên thường"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Thông tin -->
        <TextView android:text="Họ tên" android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Nhập họ tên"/>

        <TextView android:text="Số điện thoại" android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:inputType="phone" android:hint="Nhập số điện thoại"/>

        <TextView android:text="Email" android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:inputType="textEmailAddress" android:hint="Nhập email"/>

        <TextView
            android:text="Vai trò" android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvRole"
            android:textColor="#666"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
            android:text="Ngày tạo tài khoản" android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvCreatedAt"
            android:textColor="#666"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>



        <!-- Hành động -->
        <Button
            android:id="@+id/btnSave"
            android:text="Lưu thay đổi"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnChangePass"
            android:text="Đổi mật khẩu"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnLogout"
            android:text="Đăng xuất"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:paddingStart="12dp" android:paddingEnd="12dp"
    android:paddingTop="8dp" android:paddingBottom="88dp">

    <Spinner
        android:id="@+id/spnSport"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:padding="4dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCoaches"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_marginTop="8dp" android:layout_weight="1"
        android:clipToPadding="false" android:clipChildren="false"/>
</LinearLayout>
